<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>New friend</title>
</head>

<body>
    <%- include('../partials/navbar.ejs') %>
    <div class="container mt-5">
        <h1 class="mb-4">Add friend</h1>
        <form action="/friends" method="POST">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <input type="text" class="form-control" name="name" id="name" placeholder="Name" required minlength="2">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="date" class="form-label">Year we met:</label>
                    <input type="number" class="form-control" name="date" id="date" placeholder="Year (e.g., 2019)" min="2003" max="2024" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="note" class="form-label">Add a note (optional):</label>
                <textarea class="form-control" id="note" name="note" placeholder="note / anything" rows="5"></textarea>
            </div>
            <div class="d-flex gap-2 justify-content-start">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="/friends" class="btn btn-secondary">Back to friends list</a>
            </div>
        </form>
    </div>
</body>

</html>
